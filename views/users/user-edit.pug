extends ../layout.pug

include ../utils.pug

block content
  +validationErrorSummary(errors)
  form(class='authForm' action=`/users/edit/${user.id}` method='post')
    h4.text-center.py-4.text-muted Edit Profile
    input(type='hidden' name='_csrf' value=token)
    +field('First Name', 'firstName', user.firstName)
    +field('Last Name', 'lastName', user.lastName)
    +field('Email Address', 'email', user.email)
    div(class='py-4')
      button(type='submit' class='btn btn-secondary') Update Profile
      a(href='/users' class='btn btn-secondary ml-2') Cancel
