doctype html
html
  head
    title Asana Clone
    link(
      rel='stylesheet'
      href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css'
      integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh'
      crossorigin='anonymous'
      )
    style(type='text/css').
      .wrapper {
        margin: 50px;
      }
      .authForm {
        margin: 50px auto;
        width: 300px;
      }
      .logout {
        outline: none;
        border: none;
        background: none;
      }
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.d-flex.justify-content-between
      a.navbar-brand(href='/') Asana Clone
      .navbar-nav
        a.nav-item.nav-link(href='/user') Users
        a.nav-item.nav-link(href='/project') Projects
        a.nav-item.nav-link(href='/team') Teams
        a.nav-item.nav-link(href='/column') Columns
        a.nav-item.nav-link(href='/task') Tasks
        a.nav-item.nav-link(href='/data') All Data
      if locals.authenticated
        .navbar-nav
          .nav-item.nav-link Welcome #{user.firstName}!
          form.navbar-nav(action='/user/logout' method='post')
            input.logout.nav-item.text-muted(type='submit' value='Logout')
      else
        .navbar-nav
          a.nav-item.nav-link(href='/user/login') Login
          a.nav-item.nav-link(href='/user/register') Register
  block content
