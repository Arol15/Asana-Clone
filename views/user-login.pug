extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(class='authForm' action='/user/login' method='post')
    h4.text-center.py-4.text-muted Login
    input(type='hidden' name='_csrf' value=token)
    +field('Email Address', 'email')
    +field('Password', 'password', null, 'password')
    div(class='py-4')
      button(type='submit' class='btn btn-secondary') Login
      a(href='/' class='btn btn-secondary ml-2') Cancel
    div
      a.text-decoration-none.text-muted(href='/user/register') Don't have an account?
