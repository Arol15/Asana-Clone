include utils.pug

doctype html 
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title CARL - Register
        link(rel='stylesheet' type='text/css' href='../register-lora.css')
    body
      div(class="login-page")
      h2(class="logo-header") CARL
        a(href="/")
      div(class='form-container')
        h2(class='form-heading') User Registration
        +validationErrorSummary(errors)
        form(class='authForm' action='/user/register' method='post')
          input(type='hidden' name='_csrf' value=token)
          div(class="input-group")
            input(type="text" class="input-field" name='firstName' placeholder="First Name")
          div(class="input-group")
            input(type='text' class="input-field" name='lastName' placeholder="Last Name")
          div(class="input-group") 
            input(type='email' class="input-field" name='email' placeholder="Email Address")
          div(class="input-group")  
            input(type="password" class="input-field" name='password' placeholder="Password") 
          div(class="input-group")
            input(type="password" class="input-field" name='confirmPassword' placeholder="Confirm Password")  
        div(class="input-group")
          button(type='submit' class='submit-button') Register
      div(class="switch-login")
        p Already have an account?
        a(href='/user/login') Log In 