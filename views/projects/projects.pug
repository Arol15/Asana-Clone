extends ../layout.pug

block content
  div.wrapper
    h4.pb-4.text-muted Team: #{team.teamName}
    table.table
      thead
        tr
          th Project ID
          th Project Name
          th
          th
      tbody
        each project in projects
          tr
            td= project.id
            td= project.projectName
            td: .d-flex.justify-content-end
              a.btn.btn-secondary.ml-2(href=`/teams/${project.teamId}/projects/${project.id}/columns` role='button') Select
              a.btn.btn-secondary.ml-2(href=`/teams/${project.teamId}/projects/${project.id}/edit` role='button') Edit
              a.btn.btn-secondary.ml-2(href=`/teams/${project.teamId}/projects/${project.id}/delete` role='button') Delete

    div
      a.btn.btn-secondary.ml-2(href=`/teams/${team.id}/projects-create` role='button') Add Project
