doctype html
html
  head
    title C.A.R.L
    link(
      rel='stylesheet'
      href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css'
      integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh'
      crossorigin='anonymous'
      )
    style(type='text/css').
      .wrapper {
        margin: 50px;
      }
      .authForm {
        margin: 50px auto;
        width: 300px;
      }
      .logout {
        outline: none;
        border: none;
        background: none;
      }
  body
    h2 #{title}
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.d-flex.justify-content-between
      a.navbar-brand(href='/users') Asana Clone
      .navbar-nav
        a.nav-item.nav-link(href='/users') Users
        a.nav-item.nav-link(href='/teams') Teams
        a.nav-item.nav-link(href='/teams/1/projects/1/columns') Columns
        a.nav-item.nav-link(href='/teams/1/projects/1/columns/1/tasks') Tasks
        a.nav-item.nav-link(href='/data') All Data
      if locals.authenticated
        .navbar-nav
          .nav-item.nav-link Welcome #{user.firstName}!
          form.navbar-nav(action='/users/logout' method='post')
            input.logout.nav-item.text-muted(type='submit' value='Logout')
      else
        .navbar-nav
          a.nav-item.nav-link(href='/users/login') Login
          a.nav-item.nav-link(href='/users/register') Register
  block content
