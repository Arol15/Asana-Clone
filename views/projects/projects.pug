doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/stylesheets/home-project.css')
  title SandBox
body
  #myModal.modal
    .modal-container
      .modal-header Create a New Project
      form.modal-form
        label
          input(placeholder='Enter Project Name' type='text' value='')
        button.modal-button Create Project
  .main
    // side-bar__isCollapsed
    .side-bar.side-bar__isCollapsed
      .tabs.home-tasks
        h1 CARL
        div &#x1F3E0; Home
        div &#x2714;  My Tasks
      .tabs.favorites
        h2 Favorites
        p click on the &star; next to a project
      .tabs.projects
        h2 Projects
        .project-list
          span.project-name Asana Clone
          span.favorite-click &star;
        .project-list
          span.project-name spotify Clone
          span.favorite-click &star;
      .tabs.invite
        #button
          p Invite to CARL
    .main-page
      .nav-bar
        .nav-bar-item.side-bar-opener &rAarr;
        h3 HOME
      .project-label
        div YOUR PROJECTS
      .main-page-body
        each project in projects
          .project-square= project.projectName
        a.btn.btn-secondary.ml-2(href=`/teams/${team.id}/projects-create` role='button')
          .project-square.project-new +
